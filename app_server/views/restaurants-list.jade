extends layout

block content
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each restaurant in restaurants
          .col-xs-12.list-group-item
            h4 
              a(href="/restaurant/#{restaurant._id}")= restaurant.restaurantName
              small &nbsp;
            p #{restaurant.address}, #{restaurant.city}, #{restaurant.zipcode}
            
            p
              each cuisine in restaurant.cuisine
                span.label.label-warning= cuisine
                | &nbsp;
    .col-xs-12.col-sm-4 
      p.lead= sidebar
